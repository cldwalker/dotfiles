set nocompatible
syntax on
filetype plugin indent on

"from old .vimrc
set backup
set hlsearch
set history=50
set ruler
set backspace=2
set viminfo='20,\"50

"rails from http://weblog.jamisbuck.org/2008/11/17/vim-follow-up
set tabstop=2
set smarttab
set shiftwidth=2
set autoindent
set expandtab
colorscheme vibrantink

source ~/.my_vimrc
