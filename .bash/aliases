#for *nix commands
alias ciao='sudo shutdown -h now'
alias cp='cp -i'
#alias ha='history -a'
alias l=less
alias ls='ls -G'
alias l.='ls -d .* --color=tty'
alias la='ls -alh'
alias lb='ls -B'
alias mv='mv -i'
alias gr='GREP_COLOR="1;4;34" grep --color=always --exclude=*~ --exclude=*.svn* --exclude=*.tmp --exclude=entries'
alias grr='gr -r'
alias psgrep='ps aux|grep'
alias rm='rm -i'
alias rmf='rm -f'
alias rmb='rm -f *~'
alias so='source ~/.bashrc'
#alias which='alias | /usr/bin/which --tty-only --read-alias --show-dot --show-tilde'
alias k9='kill -9'
alias ka="killall"

#chained commands
alias f#='ls |wc -l'
alias w2l='tr -d 015 < $1 > $2'
dos2nix="perl -pi.bak -we 's/\r/\n/g'"

#Personal apps
alias e='vim'
alias r='ruby'
alias mydump='mysqldump -p -A'
alias p='perl'
alias sn='screen'
alias qt="open -a 'QuickTime Player'"
