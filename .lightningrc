---
:shell_commands:
  cd: cd
  cp: cp
  grep: g
  vim: v
  ls: ls
  less: l
  echo: e
  mate: m
:bolts:
  rip_dirs:
    globs:
    - $HOME/.rip/.packages/*
    global: true
    alias: pd
  rails:
    functions:
    - echo
    - grep
    - vim
    globs:
    - ! '{app,config,lib}/**/*'
    - ! '{db}/**/*.rb'
    alias: ror
  ruby_test:
    functions:
    - name: ba
      shell_command: bacon -Ilib -I.
    - name: tb
      shell_command: testrb
    - name: sp
      shell_command: rspec
    - echo
    - vim
    globs:
    - ! '{test,spec}/**/*_{spec,test}.rb'
    - ! '{test,spec}/**/{spec,test}_*.rb'
    - spec/**/*.spec
    alias: rt
  feature:
    functions:
    - name: cuc
      shell_command: cucumber
    globs:
    - ! '**/*.feature'
    global: true
    alias: ft
  app:
    functions:
    - name: oa
      shell_command: open -a
    globs:
    - /Applications/*.app
    - /Applications/Utilities/*.app
    alias: a
  rip_path:
    globs:
    - $HOME/.rip/*/lib/**/*.rb
    global: true
    alias: pp
  code:
    functions:
    - name: c
      shell_command: cd
    - cp
    - mate
    - echo
    globs:
    - $HOME/code/{gems,work,repo,priv,fork}/*
    - $HOME/code/tds/gems/*
    aliases:
      dr: $HOME/code/repo/dotfiles
      dw: $HOME/code/work/dotfiles
      w: $HOME/code/work/wegowise
      wi: $HOME/code/work/wegowise-importers
      in: $HOME/code/work/importer-net
    alias: c
  ruby_load_path:
    functions:
    - less
    - echo
    - vim
    alias: rlp
  ruby_load_dir:
    functions:
    - cd
    alias: rld
  local_ruby:
    functions:
    - git
    globs:
    - ! '**/*.rb'
    - bin/**
    global: true
    alias: rb
  wild:
    functions:
    - git
    globs:
    - ! '**/*'
    global: true
    alias: w
  code_world:
    functions:
    - echo
    - mate
    - cd
    - less
    globs:
    - $HOME/code/world/*
    alias: cw
  notes:
    functions:
    - vim
    - less
    globs:
    - $HOME/docs/notes/**/*.otl
    alias: n
  wild_dir:
    functions:
    - ls
    - cd
    - echo
    globs:
    - ! '**/'
    alias: wd
  bin:
    functions:
    - less
    alias: b
  system_ruby:
    globs:
    - /Library/Ruby/Site/1.8/**/*.{rb,bundle,so,c}
    - /System/Library/Frameworks/Ruby.framework/Versions/1.8/usr/lib/ruby/1.8/**/*.{rb,bundle,so,c}
    global: true
  gem_doc:
    functions:
    - name: o-gd
      post_path: /rdoc/index.html
      shell_command: open
      desc: open gem's doc in browser
    - post_path: /ri
      shell_command: ri --no-standard-docs -d
      desc: access ri documentation limited to this gem
    globs:
    - $GEM_HOME/doc/*
    alias: gd
  lightning:
    functions:
    - vim
    - mate
    globs:
    - $HOME/.lightning/**/*.rb
    alias: lg
  js:
    globs: ! '**/*.js'
    global: true
  gem:
    functions:
    - name: pb-g
      add_to_command: ! ' |pbcopy'
      shell_command: echo -n
    globs:
    - $GEM_HOME/gems/*
    - $GEM_HOME/bundler/gems/*
    - vendor/ruby/*/{gems,bundler/gems}/*
    global: true
    alias: g
  gem_path:
    global: true
    alias: gg
  rvm_ruby_std:
    globs:
    - $HOME/.rvm/rubies/$RUBY_VERSION/lib/ruby/**/*.{rb,bundle,so,c}
    global: true
    alias: r
  rvm_ruby_core:
    globs:
    - $HOME/.rvm/src/$RUBY_VERSION/**/*.{c,h,rb}
    global: true
    alias: rc
:ignore_paths:
- .DS_Store
- .git/
:complete_regex: true
:shell: zsh
