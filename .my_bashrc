PATH=$PATH:/opt/local/bin:/opt/local/sbin:/usr/local/mysql/bin:/usr/local/git/bin:/Users/bozo/bin:/usr/local/bin
MANPATH=$MANPATH:/usr/local/git/man:/opt/local/share/man
export PGDATA=/opt/local/var/db/postgres

alias ls='ls -G'
alias qt="open -a 'QuickTime Player'"
alias mplayer="open -a 'MPlayer OSX'"
alias prev="open -a 'Preview'"
alias ss="sudo SystemStarter"
alias oa="open -a"
alias mem='memcached -d -l 127.0.0.1 -p 11211 -m 256'
alias sc=script/spec

#path dependent
alias todo='vim ~bozo/docs/notes/todo.otl'
alias mirb='irb -r /home/bozo/.irb'
alias rconsole='ruby script/console --irb="irb -r /home/bozo/.irb_rails"'
alias oxmms="open-x11 xmms && xmms"

#enable UTF-8
export LC_CTYPE=en_US.UTF-8
set meta-flag on
set input-meta on
set output-meta on
set convert-meta off

