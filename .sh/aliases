#*nix commands
alias ciao='sudo shutdown -h now'
alias cp='cp -i'
alias l='less'
alias ls='ls -G'
alias la='ls -alh'
alias mv='mv -i'
alias gr="GREP_COLOR='1;4;34' grep --color=always --exclude='*~' --exclude='*.svn*' --exclude='*.tmp' --exclude=entries -r"
alias psgrep='ps aux|grep'
alias rm='rm -i'
alias rmf='rm -f'
alias k9='kill -9'
alias s="sudo"

